doctype html

html
    head
        title #{title}
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous')

    body.bg-dark
        // NAVBAR
        if title != 'login' && title != 'register'
            nav.navbar.navbar-expand-md.navbar-dark.bg-dark
                a.navbar-brand(href='/welcome') NEOMDb
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a.nav-link(href='/movies/years/all')
                            | Movies
                    li.nav-item
                        a.nav-link(href='/genres/all')
                            | Genres
                    li.nav-item
                        a.nav-link(href='/persons')
                            | Persons
                    li.nav-item
                        a.nav-link(href='/users/recommendations')
                            | Recommendations
                    li.nav-item
                        a.nav-link(href='/users/ratings')
                            | Ratings
                    li.nav-item
                        a.nav-link(href='/users/watchlist')
                            | Watchlist
                
                form.form-inline.my-lg-0(action='/search' method='GET')
                    input.form-control.mr-sm-2(name='searchString' type='text' placeholder='Search' required='')
                    button.btn.btn-info.my-sm-0(type='submit')
                        span.fa.fa-search
                | &nbsp;&nbsp;
                
                form.form-inline.my-lg-0(action='/auth/logout' method='GET')
                    button.btn.btn-info.my-sm-0(type='submit')
                        span.fa.fa-sign-out-alt
                        
        // MAIN CONTAINER WITH BODY
        main.container
            .my-3.p-3.bg-white.rounded.shadow-sm
                h3.border-bottom.border-gray.pb-2 #{header}
                block content

        script(src="/bower_components/jquery/dist/jquery.js")
        script(src="/bower_components/bootstrap/dist/js/bootstrap.js")
