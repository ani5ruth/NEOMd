extends layout

block content
	div.my-3.p-3.bg-white.rounded.shadow-sm
		h4.border-bottom.border-gray.pb-2.mb-0 Movies
		if movies.length == 0
			h5 Sorry, no results were found
		ul.list-group
			each movie in movies
				li.list-group-item
					a(href=`/movies/id/${movie.id}`) #{movie.title}

	div.my-3.p-3.bg-white.rounded.shadow-sm
		h4.border-bottom.border-gray.pb-2.mb-0 People
		if persons.length == 0
			h5 Sorry, no results were found
		ul.list-group
			each person in persons
				li.list-group-item
					a(href=`/persons/${person.name}`) #{person.name}